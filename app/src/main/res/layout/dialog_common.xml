<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/shape_white_background_5"
    android:gravity="center_horizontal"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_dialog_title_tv"
        style="@style/text_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/common_dialog_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/colorDividers" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:background="@color/colorDividers"
        android:text="请选择支付方式" />

    <Button
        android:id="@+id/wx_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button_theme_8"
        android:padding="10dp"
        android:text="微信支付"
        android:textColor="@color/whiteTextColor" />

    <Button
        android:id="@+id/wx_sm_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button_theme_8"
        android:padding="10dp"
        android:text="微信扫码支付"
        android:textColor="@color/whiteTextColor" />

    <Button
        android:id="@+id/albb_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button_theme_8"
        android:padding="10dp"
        android:text="支付宝支付"
        android:layout_marginBottom="15dp"
        android:textColor="@color/whiteTextColor" />

</LinearLayout>