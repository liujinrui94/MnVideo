<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_background_5"
    android:gravity="center_horizontal"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_dialog_title_tv"
        style="@style/text_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/common_dialog_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="包周(元)"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="包月(元)"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="包年(元)"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/activity_lottery_rgb_place"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="39"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="72"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/colorDividers" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/colorDividers"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="请选择支付方式"
        android:textSize="18dp" />

    <Button
        android:id="@+id/wx_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@mipmap/wxpay_background"
        android:text="微信支付"
        android:textColor="@color/whiteTextColor" />

    <Button
        android:id="@+id/wx_sm_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@mipmap/wxpay_background"
        android:padding="10dp"
        android:text="微信扫码支付"
        android:textColor="@color/whiteTextColor"
        android:visibility="gone" />

    <Button
        android:id="@+id/albb_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/zhifubao_background"
        android:padding="10dp"
        android:text="支付宝支付"
        android:textColor="@color/whiteTextColor" />

</LinearLayout>